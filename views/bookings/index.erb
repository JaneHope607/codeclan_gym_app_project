<h1>All Bookings</h1>

<a href="/bookings/new" class="create">Create New Booking</a>

    <table class="table-wrapper">
        <tr>
            <th>Booking Reference</th>
            <th>Member Name</th>
            <th>Class</th>
            <th>Day</th>
            <th>Session Time</th>
            <th></th>
        </tr>

        <% for booking in @bookings%>
        <tr>
            <td><%= booking.id%></td>
            <td><%= booking.member.full_name()%></td>
            <td><%= booking.session.gym_class.name%></td>
            <td><%= booking.session.get_day()%></td>
            <td><%= booking.session.start_time%></td>
            <td><form method="post" action="/bookings/<%= booking.id%>/delete">
                    <input class="btn" type="submit" value="Delete Booking"/>
                </form></td>
        <% end %>
        </tr>
    </table>


