<h2 class="more-info">Class: <%= @session.gym_class.name%></h2>
    <p class="details">Day: <%= @session.get_day()%> @ <%= @session.start_time%></p>
    <p class="details">Instructor: <%= @session.gym_class.instructor%></p>
    <p class="details">Capacity: <%= @session.capacity%></p>
    <p class="details">Remaining Spaces: <%= @session.remaining_spaces()%></p>

    <h2>Bookings</h2>

<div class="newsession">
<% if @session.remaining_spaces < 0%>
    <p>This session is fully booked!</p>
<% else %>
     <p><a href="/sessions/<%= @session.id %>/newbooking">Enroll Member</a>
<% end%>
    
    <table>
        <tr>
            <th>Member Name</th>
            <th>Email</th>
            <th>Membership type</th>
        </tr>
        <% for session in @session.members()%>
        <tr>
            <td><%= session.full_name()%></td>
            <td><%= session.email%></td>
            <td><%= session.membership_type%></td>
            </td>
        <% end %>
        </tr>
    </table>

<a href="/sessions">Back To All Sessions</a>

