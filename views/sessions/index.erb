<h1>Timetable</h1>

<a href="/sessions/new" class="create">Add New Session</a>

<h2 class="day">Monday Sessions:</h2>
<table class="table-wrapper">
        <tr>
            <th>Class Name</th>
            <th>Start Time</th>
            <th>Duration</th>
            <th>Spaces Available</th>
            <th>Number Bookings</th>
            <th></th>
            <th></th>
        </tr>
<% for session in @sessions%>
    <% if session.day == 1%>
        <tr>
            <td><%= session.gym_class.name%></td>
            <td><%= session.start_time%></td>
            <td><%= session.gym_class.duration%> mins</td>
            <td><%= session.remaining_spaces()%></td>
            <td><%= session.members.count%>
                <a class="show" href="/sessions/<%=session.id%>/bookings"><em>More Details>></em></a>
            </td>
            <td>
                <form method="get" action="/sessions/<%=session.id%>/edit">
                    <input class="btn-edit" type="submit" value="Edit"/>
                </form>
            </td>
            <td>
                <form method="post" action="/sessions/<%= session.id%>/delete">
                    <input class="btn-delete" type="submit" value="Delete"/>
                </form>
            </td>
        </tr>
    <% end %>
<% end %>
</table>

