<h1>New Booking</h1>

<form action="/bookings" method="post">


    <div class="form-wrapper">

    <input type="hidden" name="session_id" id="session_id" value="<%=@session.id%>">
        <h1 class="class-name"><%= @session.gym_class.name %> - <%= @session.get_day %> @ <%= @session.start_time %></h1>

        <div class="form-el">   
            <label for="member">Select A Member:</label>
            <select name="member_id" id="member_id">
                <% for member in @members%>
                    <option value="<%= member.id%>"><%= member.full_name()%></option>
                <% end %>
            </select>
        </div>

     <input class="btn"type="submit" value="Make Booking">
    
    </div>
     
</form>